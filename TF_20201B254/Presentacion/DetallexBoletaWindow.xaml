<Window x:Class="Presentacion.DetallexBoletaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="DetallexBoletaWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF9E40E2"/>
                <GradientStop Color="#FF9B24A2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Código &#xA;de la boleta:" HorizontalAlignment="Left" Margin="19,28,0,0" VerticalAlignment="Top" Width="116" FontFamily="Comic Sans MS" Foreground="White"/>
        <Label Content="Nombre&#xA;del producto:" HorizontalAlignment="Left" Margin="19,85,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS"/>
        <Label Content="Cantidad (kg):" HorizontalAlignment="Left" Margin="17,147,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="tbCantidad" HorizontalAlignment="Left" Margin="119,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188"/>
        <Button x:Name="btnAsignar" Content="Asignar" HorizontalAlignment="Left" Margin="86,323,0,0" VerticalAlignment="Top" Width="171" Click="btnAsignar_Click" BorderBrush="Black" FontFamily="Comic Sans MS"/>
        <Button x:Name="btnSalir" Content="Salir" HorizontalAlignment="Left" Margin="86,348,0,0" VerticalAlignment="Top" Width="170" Click="btnSalir_Click" BorderBrush="Black" FontFamily="Comic Sans MS"/>
        <DataGrid x:Name="dgDetallexBoletas" Margin="339,19,22,20" RenderTransformOrigin="0.5,0.5">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.509"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.991"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <ComboBox x:Name="cbBoleta" HorizontalAlignment="Left" Margin="119,39,0,0" VerticalAlignment="Top" Width="188"/>
        <ComboBox x:Name="cbProducto" HorizontalAlignment="Left" Margin="119,96,0,0" VerticalAlignment="Top" Width="188"/>
        <Label Content="Precio unitario &#xD;&#xA;(por kilogramo):" HorizontalAlignment="Left" Margin="7,179,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="tbPrecio" HorizontalAlignment="Left" Margin="119,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188"/>
        <Label Content="Importe:" HorizontalAlignment="Left" Margin="43,227,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="tbImporte" HorizontalAlignment="Left" Margin="119,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188"/>
        <Label Content="Monto total&#xD;&#xA;a pagar:" HorizontalAlignment="Left" Margin="27,266,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="tbMontoTotal" HorizontalAlignment="Left" Margin="119,272,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188"/>
    </Grid>
</Window>
